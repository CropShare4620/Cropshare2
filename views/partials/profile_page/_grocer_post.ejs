<li class="list-group-item grocer-list-group-item">
    <div class="container">
        <div class="row justify-content-center" id="grocer-tab-<%= index %>">
            <div class="col-xl-2 col-lg-2 col-md-2 col-xs-3"><img class="grocer-img" height="100" src="images/grocer_food_image.png" alt="" /></div>
            <div class="col-xl-8 col-lg-8 col-md-8 col-xs-7">
                <div class="row">
                    <div class="col-lg-8"><h2>[user.grocer.itemlist.<%= index %>.name]</h2></div>
                    <div class="col-lg-8">[user.grocer.itemlist.<%= index %>.quantity]</div>
                </div>
            </div>
            <div class="col-xl-2 col-lg-2 col-md-2 col-xs-2">
                <button type="button" class="btn btn-outline-light btn-sm" id="grocer-modal-button-<%= index %>" data-toggle="modal" data-target="#grocer-modal" data-name="user.grocer.itemlist.i.name" data-quantity="user.grocer.itemlist.i.quantity" data-price="user.grocer.itemlist.i.price">Edit</button>
            </div>
        </div>
    </div>
    <div class="modal grocer-modal fade" id="grocer-modal-<%= index %>" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5>Edit Post</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="item-name-label" class="col-form-label">Item Name:</label>
                            <input type="text" class="form-control item-name" id="grocer-modal-item-name-input-<%= index %>">
                        </div>
                        <div class="form-group">
                            <label for="item-quantity-label" class="col-form-label">Item Quantity:</label>
                            <input type="text" class="form-control item-quantity" id="grocer-modal-item-quantity-input-<%= index %>"></input>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-secondary btn-sm" id="grocer-modal-submit-<%= index %>" data-dismiss="modal">Save Changes</button>
                </div>
            </div>
        </div>
    </div>
</li>
