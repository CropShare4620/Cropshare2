<!DOCTYPE html>
<html>
    <% include partials/general_pages/_layout.ejs %>
    <body>
        <!-- Navigation -->
        <% include partials/general_pages/_navigation.ejs %>
        <!-- Content area (Tri-tab profile based marketplace)
            Must be done like this...no nested partials
            //TODO: Send user info to partial -->
        <section class="profile-section">
            <%- include('partials/profile_page/_profile_header.ejs', {user_name:"John Doe", user_contact_information:"John@doe.net", user_zip_code:"38505"}) %>
            <div class="container">
                <div class="nav nav-tabs nav-justified" id="nav-tab" role="tablist">
                    <a class="nav-item nav-link profile-nav active" id="nav-farmer-tab" data-toggle="tab" href="#nav-farmer" role="tab" aria-controls="nav-farmer" aria-selected="true">Farmer</a>
                    <a class="nav-item nav-link profile-nav" id="nav-grocer-tab" data-toggle="tab" href="#nav-grocer" role="tab" aria-controls="nav-grocer" aria-selected="false">Grocer</a>
                </div>
            </div>
            <div class="tab-content" id="nav-tabContent">
                <div class="tab-pane fade show active" id="nav-farmer" role="tabpanel" aria-labelledby="nav-farmer-tab">
                    <section class="farmer-section">
                        <ul class="list-group farmer-list-group">
                            <%- include('partials/profile_page/_farmer_post.ejs', {user_index:"1", item_name:"Potato", item_quantity:"1", item_price:"300.00", item_description:"One big potato"}) %>
                            <%- include('partials/profile_page/_farmer_post.ejs', {user_index:"2", item_name:"Tomatoes", item_quantity:"500", item_price:"14.99", item_description:"300 pounds of tomatoes"}) %>
                            <%- include('partials/profile_page/_farmer_post.ejs', {user_index:"3", item_name:"Carrot", item_quantity:"1", item_price:"12.34", item_description:"It orange"}) %>
                            <%- include('partials/profile_page/_farmer_post.ejs', {user_index:"4", item_name:"Potato", item_quantity:"1", item_price:"299.99", item_description:"One not as big potato"}) %>
                        </ul>
                    </section>
                </div>
                <div class="tab-pane fade" id="nav-grocer" role="tabpanel" aria-labelledby="nav-grocer-tab">
                    <section class="grocer-section">
                        <ul class="list-group grocer-list-group">
                            <%- include('partials/profile_page/_grocer_post.ejs', {user_index:"1", item_name:"Potato", item_quantity:"1"}) %>
                            <%- include('partials/profile_page/_grocer_post.ejs', {user_index:"2", item_name:"Tomatoes", item_quantity:"500"}) %>
                        </ul>
                    </section>
                </div>
            </div>
        </section>
        <!-- Footer -->
        <% include partials/general_pages/_footer.ejs %>
    </body>
</html>
